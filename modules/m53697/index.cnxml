<entry align="left">Los términos <m:math><m:mrow><m:mi>y</m:mi><m:mo>′</m:mo><m:mo>+</m:mo><m:mn>3</m:mn><m:mi>y</m:mi><m:mo>=</m:mo><m:mn>6</m:mn><m:mi>x</m:mi><m:mo>+</m:mo><m:mn>11</m:mn></m:mrow></m:math></entry>
