<solution id="fs-id1170572480380">
<para id="fs-id1170572480382">Los términos <m:math><m:mrow><m:mfrac><m:mn>1</m:mn><m:mrow><m:mn>40</m:mn></m:mrow></m:mfrac><m:mstyle displaystyle="true"><m:mrow><m:msubsup><m:mo stretchy="true">∫</m:mo><m:mn>0</m:mn><m:mrow><m:mn>40</m:mn></m:mrow></m:msubsup><m:mrow><m:mrow><m:mo>(</m:mo><m:mrow><m:mn>−0,068</m:mn><m:mi>t</m:mi><m:mo>+</m:mo><m:mn>5,14</m:mn></m:mrow><m:mo>)</m:mo></m:mrow><m:mi>d</m:mi><m:mi>t</m:mi></m:mrow></m:mrow></m:mstyle><m:mo>=</m:mo><m:mo>- −</m:mo><m:mfrac><m:mrow><m:mn>0,068</m:mn><m:mo stretchy="false">(</m:mo><m:mn>40</m:mn><m:mo stretchy="false">)</m:mo></m:mrow><m:mn>2</m:mn></m:mfrac><m:mo>+</m:mo><m:mn>5,14</m:mn><m:mo>=</m:mo><m:mn>3,78</m:mn><m:mtext>m/seg</m:mtext></m:mrow></m:math></para>
</solution>
