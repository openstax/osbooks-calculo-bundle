    <entry><m:math xmlns:m=""><m:mrow><m:mstyle mathvariant="bold" mathsize="normal"><m:mtext>v</m:mtext></m:mstyle><m:mrow><m:mo>(</m:mo><m:mi>t</m:mi><m:mo>)</m:mo></m:mrow><m:mo>=</m:mo><m:mstyle mathvariant="bold" mathsize="normal"><m:msup><m:mi>r</m:mi><m:mo>′</m:mo></m:msup></m:mstyle><m:mrow><m:mo>(</m:mo><m:mi>t</m:mi><m:mo>)</m:mo></m:mrow></m:mrow></m:math></entry>
  </row>
  <row>
