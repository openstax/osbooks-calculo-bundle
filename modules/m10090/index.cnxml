    <entry><emphasis effect="bold">Trabajo realizado por una fuerza F para mover un objeto a través del vector de desplazamiento</emphasis> <m:math><m:mrow><m:mover accent="true"><m:mrow><m:mi>P</m:mi><m:mi>Q</m:mi></m:mrow><m:mo stretchy="false">→</m:mo></m:mover></m:mrow></m:math></entry>
    <entry><m:math><m:mrow><m:mi>W</m:mi><m:mo>=</m:mo><m:mstyle mathvariant="bold" mathsize="normal"><m:mtext>F</m:mtext></m:mstyle><m:mo>·</m:mo><m:mover accent="true"><m:mrow><m:mi>P</m:mi><m:mi>Q</m:mi></m:mrow><m:mo stretchy="false">→</m:mo></m:mover><m:mo>=</m:mo><m:mrow><m:mo>‖</m:mo><m:mstyle mathvariant="bold" mathsize="normal"><m:mtext>F</m:mtext></m:mstyle><m:mo>‖</m:mo></m:mrow><m:mrow><m:mo>‖</m:mo><m:mrow><m:mover accent="true"><m:mrow><m:mi>P</m:mi><m:mi>Q</m:mi></m:mrow><m:mo stretchy="false">→</m:mo></m:mover></m:mrow><m:mo>‖</m:mo></m:mrow><m:mtext>cos</m:mtext><m:mspace width="0.2em"/><m:mi>θ</m:mi></m:mrow></m:math></entry>
